<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.yangdianwen.news.UI.Plugin">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#f50b0b"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/iv_home"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="4dp"
            android:src="@drawable/ic_title_home_default"/>
        <TextView
            android:id="@+id/tv_use"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="100dp"
            android:gravity="center"
            android:text="用户登录"
            android:textColor="#ffffff"
            android:textSize="30sp"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_gravity="right"
            android:padding="4dp"
            android:src="@drawable/ic_title_share_default"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="250dp">
        <EditText
            android:id="@+id/et_username"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="15dp"
            android:background="@drawable/et"
            android:hint=" 请输入用户名"
            android:textSize="25sp"/>
        <EditText
            android:id="@+id/et_password"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/et_username"
            android:layout_margin="15dp"
            android:background="@drawable/et"
            android:hint="请输入密码：6到16位字符"
            android:inputType="numberPassword"
            android:textSize="25sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/et_password"
            android:orientation="horizontal"
            android:weightSum="3">


            <Button
                android:id="@+id/btn_regist"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/password"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:background="#f10707"
                android:padding="4dp"
                android:text="注册"
                android:textColor="#ffffff"
                android:textSize="25sp"/>
            <Button
                android:id="@+id/btn_forgetPassword"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/password"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/btn_regist"
                android:layout_weight="1"
                android:background="#f10707"
                android:padding="4dp"
                android:text="忘记密码"
                android:textColor="#ffffff"
                android:textSize="25sp"/>
            <Button
                android:id="@+id/btn_plugin"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/password"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="#f10707"
                android:padding="4dp"
                android:text="登陆"
                android:textColor="#ffffff"
                android:textSize="25sp"/>
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>
