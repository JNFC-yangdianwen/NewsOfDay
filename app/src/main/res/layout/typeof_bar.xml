<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/rl_1"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:background="#ff0000">
        <TextView android:layout_width="wrap_content"
                  android:layout_height="match_parent"
                  android:layout_centerHorizontal="true"
                  android:text="新闻主页"
                  android:textSize="30sp"/>
        <ImageView
            android:id="@+id/iv_title_main"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:src="@drawable/ic_title_home_default"/>
        <ImageView
            android:id="@+id/iv_title_share"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_title_share_default"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:layout_below="@+id/rl_1"
        android:padding="4dp">
        <TextView android:id="@+id/tv_shehui"
                  android:layout_width="wrap_content"
                  android:layout_height="match_parent"
                  android:padding="3dp"
                  android:text="社会"
                  android:textSize="19sp"
        />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/tv_shehui"
            android:padding="3dp"
            android:text="军事"
            android:textSize="19sp"
        />
        <ImageView
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
        android:src="@drawable/typemore_normal"/>


    </RelativeLayout>
</LinearLayout>